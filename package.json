{
  "name": "md2pdf",
  "version": "1.0.0",
  "description": "A tool for converting Markdown documents to PDF files with professional table of contents.",
  "main": "dist/index.js",
  "bin": {
    "md2pdf": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "node dist/cli.js",
    "dev": "ts-node src/cli.ts",
    "test": "jest --forceExit --maxWorkers=1",
    "test:watch": "jest --watch --forceExit --maxWorkers=1",
    "test:coverage": "jest --coverage --forceExit --maxWorkers=1",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist coverage"
  },
  "keywords": [
    "markdown",
    "pdf",
    "cli",
    "converter",
    "toc",
    "chinese",
    "table-of-contents"
  ],
  "author": "Walker Chiu",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/puppeteer": "^5.4.7",
    "chalk": "^5.0.0",
    "commander": "^11.0.0",
    "fs-extra": "^11.0.0",
    "inquirer": "^9.0.0",
    "markdown-it": "^14.0.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-table-of-contents": "^1.0.0",
    "ora": "^7.0.0",
    "puppeteer": "^21.11.0"
  }
}
