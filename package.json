{
  "name": "md2pdf",
  "version": "1.0.0",
  "description": "A professional Markdown to PDF converter with syntax highlighting, diagrams, smart features, and comprehensive testing.",
  "main": "dist/index.js",
  "bin": {
    "md2pdf": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:watch": "tsc --watch & tsc-alias --watch",
    "start": "node dist/cli.js",
    "dev": "ts-node -r tsconfig-paths/register src/cli.ts",
    "test": "jest --config jest.config.unit.js --detectOpenHandles",
    "test:watch": "jest --config jest.config.unit.js --watch",
    "test:coverage": "jest --config jest.config.unit.js --coverage --forceExit",
    "test:all": "jest --config jest.config.all.js --forceExit --detectOpenHandles",
    "test:light": "jest --config jest.config.light.js --forceExit --detectOpenHandles",
    "test:unit": "jest --config jest.config.unit.js tests/unit --forceExit --maxWorkers=50% --coverage=false",
    "test:integration": "jest --config jest.config.all.js tests/integration --forceExit --maxWorkers=1 --coverage=false",
    "test:pdf": "jest --config jest.config.all.js tests/integration/pdf --forceExit --maxWorkers=1 --coverage=false --testTimeout=240000",
    "test:batch": "jest --config jest.config.all.js tests/integration/batch-processing.test.ts --forceExit --maxWorkers=1 --coverage=false --testTimeout=240000",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "pretty-check": "prettier --check .",
    "pretty-write": "prettier --write .",
    "clean": "rimraf dist coverage",
    "clean:all": "rimraf dist coverage .bmad-core .cursor .claude .github event_demo *.tmp test-results test-output **/*.bak **/.DS_Store",
    "clean:test": "ts-node -r tsconfig-paths/register scripts/clean-test-files.ts",
    "prepare": "husky install"
  },
  "keywords": [
    "markdown",
    "pdf",
    "cli",
    "converter",
    "toc",
    "chinese",
    "table-of-contents",
    "plantuml",
    "mermaid",
    "diagrams",
    "syntax-highlighting",
    "prismjs",
    "admonitions",
    "typescript"
  ],
  "author": "Walker Chiu",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/markdown-it": "^14.1.2",
    "@types/prismjs": "^1.26.5",
    "@types/puppeteer": "^5.4.7",
    "chalk": "^5.0.0",
    "commander": "^11.0.0",
    "fs-extra": "^11.0.0",
    "glob": "^11.0.3",
    "inquirer": "^9.0.0",
    "markdown-it": "^14.0.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-attrs": "^4.3.1",
    "markdown-it-table-of-contents": "^1.0.0",
    "mermaid": "^11.12.0",
    "node-plantuml": "^0.9.0",
    "ora": "^7.0.0",
    "pdf-lib": "^1.17.1",
    "plantuml-encoder": "^1.4.0",
    "prismjs": "^1.30.0",
    "puppeteer": "^21.11.0",
    "puppeteer-core": "^24.22.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix"
    ],
    "*.{ts,js,json,md}": [
      "prettier --check ."
    ]
  }
}
